<?xml version="1.0" encoding="UTF-8"?>

<theme>

<formatVersion>7</formatVersion>

<view name="system">

<!---------------------------------------------------------------------->
<!-------------------------------- CAROUSEL ---------------------------->
<!---------------------------------------------------------------------->

<carousel name="systemcarousel">
