<maxLogoCount ifSubset="Logo Type:Classic">7</maxLogoCount>
<maxLogoCount ifSubset="Logo Type:Clean">3</maxLogoCount>
<maxLogoCount ifSubset="Logo Type:Spiral">7</maxLogoCount>
