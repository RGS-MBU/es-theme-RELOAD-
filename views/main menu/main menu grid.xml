<zIndex>5</zIndex>
<storyboard>
<animation property="x" from="1" begin="0" duration="1000" mode="linear"/>
</storyboard>  
</image>

<video name="background_video" extra="true" ifSubset="Video:ON">
<pos>0.5 0.5</pos>
<origin>0.5 0.5</origin>
<size>1 1</size>
<delay>2</delay>
<path>./videos/${system.theme}.mp4</path>
